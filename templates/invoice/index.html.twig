{% extends 'baseBack.html.twig' %}




{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Referance</th>
                <th>Creation_date</th>
                <th>Status</th>
                <th>Full_name</th>
                <th>SubTotal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.referance }}</td>
                <td>{{ invoice.creationDate ? invoice.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ invoice.status }}</td>
                <td>{{ invoice.fullName }}</td>
                <td>{{ invoice.subTotal }}</td>
                <td>
                    <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_new') }}">Create new</a>
{% endblock %}
