{% extends 'baseFront.html.twig' %}
{% block body %}
    <div class="new-form-container">
        <h1>Create new Evenement</h1>

        {{ include('evenement/_form.html.twig') }}

        <a href="{{ path('app_evenement_index') }}" class="back-link">Back to list</a>
    </div>

    <style>
        /* Styles spécifiques pour la page de création (new) */
        .new-form-container {
            max-width: 400px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            transition: background-color 0.3s ease-in-out;
        }

        .new-form-container:hover {
            background-color: #f9f9f9;
        }

        .new-form-container h1 {
            color: #3498db;
        }

        .new-form-container label {
            display: block;
            margin-bottom: 8px;
            color: #555;
        }

        .new-form-container input[type="date"] {
            width: calc(100% - 16px);
            padding: 10px;
            margin-bottom: 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            transition: border-color 0.3s ease-in-out;
        }

        .new-form-container input[type="date"]:focus {
            border-color: #3498db;
            outline: none;
        }

        .new-form-container a.back-link {
            display: block;
            margin-top: 10px;
            color: #3498db;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        .new-form-container a.back-link:hover {
            text-decoration: underline;
            color: #1d6fa5;
        }

        /* Ajoutez d'autres styles spécifiques au besoin */
    </style>
{% endblock %}
