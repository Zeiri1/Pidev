{% extends 'baseFront.html.twig' %}

{% block title %}Edit Evenement{% endblock %}


{% block body %}
  

    <div class="edit-container">
        <h1>Edit Evenement</h1>

        {{ include('evenement/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('app_evenement_index') }}" class="back-link">Back to list</a>

        {{ include('evenement/_delete_form.html.twig', {'delete_button_label': 'Delete'}) }}
          <style>
        /* Styles spécifiques pour la page edit */
        .edit-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            transition: background-color 0.3s ease-in-out;
        }

        .edit-container:hover {
            background-color: #f9f9f9;
        }

        .edit-container h1 {
            color: #3498db;
        }

        .edit-form {
            margin-top: 20px;
        }

        .back-link, .delete-link {
            display: inline-block;
            margin-top: 10px;
            padding: 10px;
            color: #fff;
            background-color: #e74c3c; /* Couleur pour le lien de suppression */
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
        }

        .back-link:hover, .delete-link:hover {
            background-color: #c0392b;
        }

        /* Ajoutez d'autres styles spécifiques au besoin */
    </style>

    </div>
{% endblock %}

