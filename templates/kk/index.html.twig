{% extends 'base.html.twig' %}

{% block title %}Transport index{% endblock %}

{% block body %}
    <h1>Transport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_transport</th>
                <th>Capacite</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td>{{ transport.id }}</td>
                <td>{{ transport.typeTransport }}</td>
                <td>{{ transport.capacite }}</td>
                <td>{{ transport.statut }}</td>
                <td>
                    <a href="{{ path('app_kk_show', {'id': transport.id}) }}">show</a>
                    <a href="{{ path('app_kk_edit', {'id': transport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_kk_new') }}">Create new</a>
{% endblock %}
